<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/al_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.icoper.launcher.LauncherActivity">

    <ImageView
        android:id="@+id/la_background_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/al_change_wallp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="wallpaper" />


        <com.example.icoper.launcher.ui.TwoWayGridView
            app:scrollDirectionLandscape="horizontal"
            app:scrollDirectionPortrait="horizontal"
            android:id="@+id/la_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.example.icoper.launcher.ui.TwoWayGridView>


    </LinearLayout>
</RelativeLayout>
